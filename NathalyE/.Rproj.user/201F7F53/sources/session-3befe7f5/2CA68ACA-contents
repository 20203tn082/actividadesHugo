
#Ejercicio 2
#Del dataframe iris: calcula
#1. Cuántas flores contiene cada especie
#2. Desviación estándar de todas las columnas numéricas de iris 
#para aquellas flores de la especie setosa
#3. Desviación de la anchura de pétalo para aquellas
#flores de la especie setosa
#4. Desviación de la anchura de pétalo de las distintas especies

conteo <- c(sum(iris$Species == 'setosa'), sum(iris$Species == 'versicolor'), sum(iris$Species == 'virginica'))
names(conteo) <- c('setosa', 'versicolor', 'virginica')
print(conteo)

conteo.table <- table(iris$Species)
print(conteo.table)

#2.
setosa <- iris[iris$Species == 'setosa',]
setosa.desv <- sapply(setosa[, 1:4], sd)
print(setosa.desv)


#3.
setosa.anchura <- sd(setosa$Petal.Width)
print(setosa.anchura)

#4.
virginica <- iris[iris$Species == 'virginica',]
virginica.anchura <- sd(virginica$Petal.Width)

versicolor <- iris[iris$Species == 'versicolor',]
versicolor.anchura <- sd(versicolor$Petal.Width)

anchuras <- c(setosa.anchura, versicolor.anchura, virginica.anchura)
names(anchuras) <- c('setosa', 'versicolor', 'virginica')
print(anchuras)


